.minput {
  border-bottom: solid 1rpx #dedede;
  padding-bottom: 6rpx;
  margin-bottom: 6rpx;
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}

.minput,
.minput_title,
.minput .ipt {
  height: 60rpx;
  line-height: 60rpx;
}

.minput_title {
  width: 18%;
  text-align: right;
  font-size: 28rpx;
  float: left;
}
.minput .ipt {
  width: 80%;
  margin: 0 auto;
  float: left;
}

.pl_ipt {
  font-size: 24rpx;
}
